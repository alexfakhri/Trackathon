<% content_for :title do %>
  Trackathon dashboard
<% end %>

<center>
<section class="powered_by>">
  <a href="/"><img class="logo" src="/images/dashboard_logo.png" height="40" width="266" style="padding-top:10px; padding-bottom:10px"></a>
</section>
</center>

<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div id="welcome-widget" data-id="welcome" data-view="Text" data-title="<%= @name.titleize %>" data-text="This is your hackathon dashboard." data-moreinfo="Protip: You can drag the widgets around!"></div>
    </li>

    <li data-row="1" data-col="2" data-sizex="2" data-sizey="1">
      <div id="countdown-widget" data-view="Countdown" data-title="Time remaining" data-end="<%= @end_time %>"></div>
      <i class="fa fa-clock-o icon-background"></i>
    </li>

    <li id="new-project" data-row="3" data-col="1" data-sizex="1" data-sizey="1" onclick='location.href="/hackathons/<%= @hackathon.id %>/projects/new";'>
      <div id="new-project-widget" data-id="add" data-view="Text" data-title="Add a New Project" style="background-color:#662B4C;"></div>
      <i class="fa fa-terminal icon-background"></i>
    </li>

    <li data-row="2" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="twitter_mentions" data-view="Comments" data-moreinfo="Tweets about #septmakers"></div>
      <i class="fa fa-twitter icon-background"></i>
    </li>

    <li data-row="3" data-col="2" data-sizex="1" data-sizey="1">
      <div data-id="beer" data-view="Number" data-title="Need for Beer" style="background-color:#46BBB3;"></div>
      <i class="fa fa-heart icon-background icon-large"></i>
    </li>

    <li data-row="2" data-col="5" data-sizex="1" data-sizey="2">
      <div data-id="gitlines" data-total="Total Lines of Code" data-view="List" data-unordered="true" data-title="Lines Per Project" data-lines="286K"></div>
      <i class="fa fa-github icon-background"></i>
    </li>

    <% @projects.each do |project| %>
      <li id="project_link" data-row="2" data-col="1" data-sizex="1" data-sizey="1" onclick='location.href="/projects/<%= project.id %>";'>
          <div id="project-progress-widget<%= project.id %>" data-id="project<%= project.id %>" data-view="Project" data-title="<%= project.name %>" data-min="0" data-max="100"></div>
      </li>
    <% end %>

  </ul>

</div>
